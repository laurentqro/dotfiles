[alias]
  # shortcuts
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  addp = add -p .
  st = status

  # log
  l = log --oneline --decorate --graph -20
  t = log --oneline --decorate --graph --branches --remotes -20
  lg = log --oneline --decorate --graph --branches --remotes -20 --pretty=format:'%C(yellow)%h%C(red bold)%d %Creset%s %C(green)(%ar) %C(cyan)<%cn>' --date=relative

  # list aliases
  al = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

[user]
  name = Laurent Curau
  email = laurent.curau@alphasights.com
  username = laurentqro

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = red

[push]
  default = nothing

[core]
  editor = vim

[pull]
  rebase = true
